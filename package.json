    "if-env": "^1.0.4",
    "jquery": "^3.3.1",
    "mongoose": "^5.0.17",

    "react-camera": "^0.1.3",
    "react-bootstrap": "^0.32.1",
    "react-facebook-auth": "^1.4.0",
    "react-facebook-login": "^4.0.1",
